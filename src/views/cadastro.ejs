<%- include ('includes/head')%>
<%- include ('includes/nav')%>
    <div class="row d-flex justify-content-center">
      <div class="col-lg-4 my-5">
        <h1 class="text-center">Criar conta ou Entrar</h1>

        <%- include ('includes/messages'); %>

          <div class="row d-flex justify-content-center" style="margin-top:60px;">
            <h4>Faça seu cadastro</h4>
            <p>Se você ainda não tem conta, preencha o formulário abaixo</p>
            <form action="/login/register" method="POST">
              <input type="hidden" name="_csrf" value=<%= csrfToken %>>
              <div class="form-group">
                <label>Seu e-mail</label>
                <input type="email" class="form-control" name="email">
              </div>
              <div class="form-group">
                <label>Sua senha</label>
                <input type="password" class="form-control" name="password">
              </div>
              <button type="submit" class="btn btn-primary my-3">Criar conta</button>
            </form>
          </div>
      </div>
    </div>
<%- include ('includes/footer')%>