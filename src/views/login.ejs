<%- include ('includes/head')%>
<%- include ('includes/nav')%>
    <div class="row d-flex justify-content-center">
      <div class="col-lg-4 my-5">
        <h1 class="text-center">Criar conta ou Entrar</h1>

        <%- include ('includes/messages'); %>

          <div class=" d-flex justify-content-center" style="margin-top:60px;">
            <div class="col-lg">
              <h4>Faça seu login</h4>
              <p>Se você já tem conta, faça login abaixo: </p>
              <form action="/login/login" method="POST">
                <input type="hidden" name="_csrf" value=<%=csrfToken %>>
                <div class="form-group">
                  <label>Seu e-mail</label>
                  <input type="email" class="form-control" name="email">
                </div>
                <div class="form-group">
                  <label>Sua senha</label>
                  <input type="password" class="form-control" name="password">
                </div>
                <button type="submit" class="btn btn-primary my-3">Entrar</button>
                <br>
                <label>Não possui cadastro ?</label> <a href="/login/register">Cadastre-se</a>

              </form>
            </div>
          </div>
      </div>
    </div>
<%- include ('includes/footer')%>